<view class="container">
	<view class="filter-flex">
		<view class="filter-tab sort-tab">
			<text bindtap="setSortBy" data-sortindex="{{index}}" data-sortid="{{item.id}}" class="{{sortindex==index?'active':''}}" wx:for="{{sort}}" wx:key="{{item.id}}">{{item.title}}</text>
		</view>
	</view>
		<scroll-view class="container-body" scroll-y="true" scroll-top="{{scrollview}}" bindscroll="scrollHandle" bindscrolltolower="searchScrollLower">
		<view class="conference-list">
			<navigator class="conference-item" wx:for="{{activitylist}}" wx:key="{{item.columns.id}}" url="../puactivitydetail/puactivitydetail?id={{item.columns.id}}">
				<view class="conference-item-img">
          <view class="box">
              	<image src="{{item.columns.url}}" mode="aspectFill"></image>
				      	<text wx:if="{{item.columns.state}}">上架</text>
          </view>
				</view>
				<view class="conference-item-text">
					<view class="conference-item-title">{{item.columns.name}}</view>
					<view class="conference-item-info">
						<text>产品规格</text>
            <text>{{item.columns.specifications}}</text>
            <text>产品类型</text>
						<text>{{item.columns.product_type}}</text>
					</view>
					<view class="conference-item-info">
             <text>产品价格</text>
             <text>{{item.columns.price}}</text>
             <text>创建时间</text>
					   <text>{{item.columns.create_date}}</text>
					</view>
				</view>
			</navigator>
		</view>
		<view class="gototop {{scrolltop>200?'active':''}}" bindtap="goToTop"></view>
	</scroll-view>
</view>