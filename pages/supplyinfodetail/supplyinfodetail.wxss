.item-box {
  position: relative;
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  background: #fff;
}
.item {
  color: #656565;
}
.item-btns {
  display: flex;
  position: absolute;
  right: 10rpx;
  bottom: 20rpx;
}
.city, .status {
  width: 126rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1rpx solid #009e96;
  background: #009e96;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}
.city {
  margin-right: 20rpx;
  background: none;
  color: #009e96;
}
.img-wrap {
  margin: 10rpx;
  padding-top: 10rpx;
  padding-left: 10rpx;
  background: #fff;
  display: flex;
  flex-wrap: wrap;
}
.img-box {
  box-sizing: border-box;
  width: 50%;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 235rpx;
}
.img-item {
  width: 100%;
  height: 100%;
  border: none;
}
.introduce {
  padding: 20rpx 48rpx;
  background: #fff;
}
.introduce-color {
  color: #a6a6a6;
}
.foot {
  height: 90rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
}
.foot-btn {
  width: 298rpx;
  background: #009e96;
  height: 90rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 90rpx;
  text-align: center;
}
.foot-left {
  width: calc(100% - 298rpx);
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.foot-item {
  width: 50%;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.foot-item text {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #a6a6a6;
}
.foot-img {
  width: 30rpx;
  height: 30rpx;
  border: none;
}
.empty {
  height: 90rpx;
  margin-top: 10rpx;
}
.line {
  height: 80rpx;
  width: 2rpx;
  background: #eee;
}
.radio-group {
  display: flex;
  flex-direction: column;
}
.radio {
  height: 70rpx;
  width: 100%;
  display: flex;
  align-items: center;
}