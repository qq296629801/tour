.top-box{
  box-sizing: border-box;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.top-name {
  text-align: center;
  line-height: 90rpx;
  width: 25%;
  height: 90rpx;
}
.search-bar{
  width: 75%;
  position: relative;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.search-bar image{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 16rpx;
  left: 36rpx;
}
.search-bar-txt{
  border-radius: 30rpx;
  height: 60rpx;
  padding-left: 50rpx;
  font-size: 22rpx;
  background: #eee;
}
.con-box {
  border-top: 1rpx solid #f2f2f2;
  display: flex;
  height: calc(100% - 90rpx);
}
.con-box-left {
  width: 25%;
  border-right: 1rpx solid #f2f2f2;
}
.con-box-right {
  width: 75%;
  overflow-x: hidden;
  overflow-y: auto;
}
.wrap {
  width: 100%;
  height: 100%;
  background: #fff;
  position: fixed;
  left: 0;
  top: 0;
}
.item-tab {
  height: 90rpx;
  border-bottom: 1rpx solid #f2f2f2;
  line-height: 90rpx;
  text-align: center;
  color: #959595;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.active {
  background: #f2f2f2;
}
.item {
  border-bottom: 1rpx solid #f2f2f2;
  height: 205rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.img {
  width: 150rpx;
  height: 160rpx;
  margin-right: 10rpx;
  border: none;
}
.item-text {
  width: calc(100% - 160rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item-text text {
  color: #959595;
  font-size: 24rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-title {
  color: #ff0000 !important;
  font-size: 26rpx !important;
}