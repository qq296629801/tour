.top-box{
  box-sizing: border-box;
  width: 100%;
  height: 90rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.top-name {
  text-align: center;
  line-height: 90rpx;
  width: 30%;
  height: 90rpx;
}
.search-bar{
  width: 70%;
  position: relative;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.search-bar image{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 16rpx;
  left: 50rpx;
}
.search-bar-txt{
  border-radius: 30rpx;
  height: 60rpx;
  padding-left: 50rpx;
  font-size: 22rpx;
  background: #eee;
}