/* pages/company/company.wxss */
.banner{
  width: 100%;
  height:  350rpx;
  border: none;
}
.news-box {
  height: 89rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 26rpx;
  box-sizing: border-box;
}
.news {
  width: 100%;
  height: 68rpx;
  box-shadow: 0  0 1rpx 0 rgba(0, 0, 0, 0.6);
  border-radius: 20rpx;
  line-height: 68rpx;
  padding-left: 30rpx;
  padding-right: 10rpx;
  display: flex;
  position: relative;
  background: #fff;
}
.news-con {
  width: 72%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.more {
  position: absolute;
  right: 10rpx;
}
.news-tips {
  color: #47a86c;
}
.info {
  padding: 20rpx 48rpx;
  box-sizing: border-box;
  background: #fff;
}
.company-logo {
  height: 140rpx;
  width: 140rpx;
  border: none;
}
.info-top {
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.company-logo-box {
  width: 20%;
}
.info-bottom {
  padding-top: 20rpx;
}
.company-name {
  color: #1c1c1c;
}
.info-top-right {
  width: calc(100% - 20rpx);
  padding-left: 20rpx;
  box-sizing: border-box;
}
.company-hot {
  display: flex;
  width: 100%;
  height: 60rpx;
  align-items: center;
  justify-content: space-between;
}
.address {
  color: #787878;
  line-height: 50rpx;
}
.font-color {
  color: #a6a6a6;
}
.address-img {
  width: 50rpx;
  height: 50rpx;
  border: none;
  float: left;
}
.company-introduce {
  margin-top: 10rpx;
  padding: 20rpx 48rpx;
  background: #fff;
}
.company-introduce-color {
  color: #a6a6a6;
}
.img-item-top {
  height: 70rpx;
  display: flex;
  align-items: center;
  padding-left: 48rpx;
}
.img-wrap {
  padding-top: 10rpx;
  padding-left: 10rpx;
  background: #fff;
  display: flex;
  flex-wrap: wrap;
}
.img-box {
  box-sizing: border-box;
  width: 50%;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 235rpx;
}
.img-item {
  width: 100%;
  height: 100%;
  border: none;
}
.img-title {
  color: #787878;
}