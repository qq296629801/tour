.live-player-box {
  width: 100%;
  height: 387rpx;
}
.live-player {
  width: 100%;
  height: 100%;
}
.box{
  box-sizing: border-box;
  width: 100%;
  height: 90rpx;
  padding: 0 28rpx;
  background: #00736d;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
}
.search-bar{
  width: 100%;
  background: #00746c;
  color:#fff;
  position: relative;
}
.search-bar image{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 16rpx;
  left: 16rpx;
}
.search-bar-txt{
  background: #32908a;
  border-radius: 30rpx;
  color:#fff;
  height: 60rpx;
  padding-left: 50rpx;
  font-size: 22rpx;
}
.mid {
  height: 72rpx;
  display: flex;
  line-height: 72rpx;
  margin-bottom: 10rpx;
}
.mid view {
  box-sizing: border-box;
  width: 50%;
  text-align: center;
  background: #fff;
  border-bottom: 1rpx solid #fff;
}
.active {
  border-bottom: 1rpx solid #ff984b !important;
  color: #ff984b;
}
.line {
  width: 1rpx;
}
.live-item {
  background: #fff;
  height: 205rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-top: 10rpx;
}
.img {
  width: 150rpx;
  height: 160rpx;
  margin-right: 10rpx;
  border: none;
}
.item-text {
  width: calc(100% - 160rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item-text text {
  color: #959595;
  font-size: 24rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-title {
  color: #676666 !important;
  font-size: 26rpx !important;
}
.detail {
  height: 118rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  line-height-step: 48rpx;
  background: #fff;
  margin-bottom: 1rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-indent: 2em;
}
.chart {
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 20rpx;
}
.chart-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.foot-img {
  height: 40rpx;
  width: 40rpx;
}
.chart-input {
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 70%;
  background: #ebebeb;
  border-radius: 50rpx;
}
.emoji-box {
  width: 100%;
  padding-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.emotions-img-box {
  display: flex;
  padding: 5rpx;
}
.emotions-img {
  width: 40rpx;
  height: 40rpx;
}
@import '../purchaser/purchaser.wxss'