.live-player-box {
  width: 100%;
  height: 387rpx;
}
.live-player {
  width: 100%;
  height: 100%;
}
.box{
  box-sizing: border-box;
  width: 100%;
  height: 90rpx;
  padding: 0 28rpx;
  background: #00736d;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
}
.search-bar{
  width: 100%;
  background: #00746c;
  color:#fff;
  position: relative;
}
.search-bar image{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 16rpx;
  left: 16rpx;
}
.search-bar-txt{
  background: #32908a;
  border-radius: 30rpx;
  color:#fff;
  height: 60rpx;
  padding-left: 50rpx;
  font-size: 22rpx;
}
.mid {
  height: 72rpx;
  display: flex;
  line-height: 72rpx;
}
.mid view {
  box-sizing: border-box;
  width: 50%;
  text-align: center;
  background: #fff;
  border-bottom: 1rpx solid #fff;
}
.active {
  border-bottom: 1rpx solid #ff984b !important;
  color: #ff984b;
}
.line {
  width: 1rpx;
}
.item {
  background: #fff;
  height: 205rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-top: 10rpx;
}
.img {
  width: 150rpx;
  height: 160rpx;
  margin-right: 10rpx;
  border: none;
}
.item-text {
  width: calc(100% - 160rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item-text text {
  color: #959595;
  font-size: 24rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-title {
  color: #676666 !important;
  font-size: 26rpx !important;
}