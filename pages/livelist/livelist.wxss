.publish-con textarea {
  width: 100%;
  height: 213rpx;
  background: #fff;
  padding: 26rpx 29rpx;
  box-sizing: border-box;
}
.fengexian {
  width: 1rpx;
}
.mid {
  margin-top: 1rpx;
  height: 72rpx;
  display: flex;
  line-height: 72rpx;
}
.mid view {
  box-sizing: border-box;
  width: 50%;
  text-align: center;
  background: #fff;
  border-bottom: 1rpx solid #fff;
}
.active {
  border-bottom: 1rpx solid #ff984b !important;
  color: #ff984b;
}
.publish-pic {
  margin-top: 2rpx;
  height: 217rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.publish-pic image {
  width: 158rpx;
  height: 158rpx;
  border: none;
}
.form-item {
  position: relative;
  margin-top: 2rpx;
  background: #fff;
  height: 90rpx;
  padding-left: 80rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.form-item input, picker {
  height: 90rpx;
  line-height: 90rpx;
}
.picker {
  display: flex;
  flex-wrap: nowrap;
}
.picker-tips {
  color: #888;
}
.publish-btn {
  background: #009e96;
  width: 497rpx;
  height: 70rpx;
  border-radius: 50rpx;
  margin-top: 126rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 70rpx;
}
.img-1 {
  position: absolute;
  left: 25rpx;
  top: 28rpx;
  width: 30rpx;
  height: 35rpx;
  border: none;
}
.img-2 {
  position: absolute;
  left: 23rpx;
  top: 28rpx;
  width: 35rpx;
  height: 35rpx;
  border: none;
}
.img-3 {
  position: absolute;
  left: 23rpx;
  top: 27rpx;
  width: 35rpx;
  height: 36rpx;
  border: none;
}